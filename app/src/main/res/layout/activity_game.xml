<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp">

        <!-- Player Section -->
        <LinearLayout
            android:id="@+id/playerLayout"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/playerOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textSize="18sp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/playerTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textSize="18sp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/playerLayout2"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/playerThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textSize="18sp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/playerFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textSize="18sp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- Shot One Slider -->
        <LinearLayout
            android:id="@+id/slider_shot_one"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp">

            <TextView
                android:id="@+id/shot_one_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/seekBarShotOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:max="20"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Shot One Radio Buttons -->
        <LinearLayout
            android:id="@+id/buttons_shot_one"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <RadioGroup
                android:id="@+id/shot_one_radio_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/shot_one_double"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="specialRadioButtonClick"
                    android:text="@string/double_shot" />

                <RadioButton
                    android:id="@+id/shot_one_triple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="specialRadioButtonClick"
                    android:text="@string/triple_shot" />

                <RadioButton
                    android:id="@+id/shot_one_bull"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="specialRadioButtonClick"
                    android:text="@string/bull_shot" />

                <RadioButton
                    android:id="@+id/shot_one_bulls_eye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="specialRadioButtonClick"
                    android:text="@string/bulls_eye_shot" />
            </RadioGroup>
        </LinearLayout>

        <!-- Shot Two Slider -->
        <LinearLayout
            android:id="@+id/slider_shot_two"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp">

            <TextView
                android:id="@+id/shot_two_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/seekBarShotTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:max="20"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Shot Two Radio Buttons -->
        <LinearLayout
            android:id="@+id/buttons_shot_two"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/shot_two_double"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="specialRadioButtonClick"
                    android:text="@string/double_shot" />

                <RadioButton
                    android:id="@+id/shot_two_triple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="specialRadioButtonClick"
                    android:text="@string/triple_shot" />

                <RadioButton
                    android:id="@+id/shot_two_bull"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="specialRadioButtonClick"
                    android:text="@string/bull_shot" />

                <RadioButton
                    android:id="@+id/shot_two_bulls_eye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="specialRadioButtonClick"
                    android:text="@string/bulls_eye_shot" />
            </RadioGroup>
        </LinearLayout>

        <!-- Shot Three Slider -->
        <LinearLayout
            android:id="@+id/slider_shot_three"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp">

            <TextView
                android:id="@+id/shot_three_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16dp"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/seekBarShotThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:max="20"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Shot Three Radio Buttons -->
        <LinearLayout
            android:id="@+id/buttons_shot_three"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/shot_three_double"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="specialRadioButtonClick"
                    android:text="@string/double_shot" />

                <RadioButton
                    android:id="@+id/shot_three_triple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="specialRadioButtonClick"
                    android:text="@string/triple_shot" />

                <RadioButton
                    android:id="@+id/shot_three_bull"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="specialRadioButtonClick"
                    android:text="@string/bull_shot" />

                <RadioButton
                    android:id="@+id/shot_three_bulls_eye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="specialRadioButtonClick"
                    android:text="@string/bulls_eye_shot" />
            </RadioGroup>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mainLayoutBot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_alignParentBottom="true" >

        <!-- Shot One Score Line -->
        <LinearLayout
            android:id="@+id/shot_one_score_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp">

            <TextView
                android:id="@+id/shot_one_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/shot_one_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/shot_one_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/shot_one_hint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="(15)"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Shot Two Score Line -->
        <LinearLayout
            android:id="@+id/shot_two_score_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/shot_two_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/shot_two_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/shot_two_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/shot_two_hint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="(Double 18)"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Shot Three Score Line -->
        <LinearLayout
            android:id="@+id/shot_three_score_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/shot_three_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/shot_three_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/shot_three_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/shot_three_hint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Total Score Line -->
        <LinearLayout
            android:id="@+id/total_score_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/total_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/total_text"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total_hint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Button Check and Clear -->
        <LinearLayout
            android:id="@+id/checkLayout"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/undo_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_cancel"
                android:onClick="onUndoScoreClicked"
                android:text="@string/clear_inputs"
                android:textColor="#000000">
            </Button>

            <Button
                android:id="@+id/check_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="4dp"
                android:onClick="onCheckScoreClicked"
                android:background="@drawable/button_primary"
                android:textColor="#ffffff"
                android:text="@string/check_shot"
                android:hapticFeedbackEnabled="true">
            </Button>
        </LinearLayout>

        <!-- Remaining Points Section -->
        <LinearLayout
            android:id="@+id/scoreInfoLayout"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_marginBottom="6dp">

            <TextView
                android:id="@+id/remainingScoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Remaining points:"/>

            <TextView
                android:id="@+id/remainingScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_weight="10"
                android:gravity="start"
                android:text="1"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>

