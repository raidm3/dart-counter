<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <!-- Player Section -->
        <LinearLayout
            android:id="@+id/playerLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/playerOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/playerTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/playerThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/playerFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="18sp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Double/Triple Section -->
        <LinearLayout
            android:id="@+id/LinearLayout00"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <ToggleButton
                android:id="@+id/points_double"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_points"
                android:onClick="onSpecialButtonClicked"
                android:textOff="DOUBLE"
                android:textOn="DOUBLE"
                android:textSize="16sp" />

            <ToggleButton
                android:id="@+id/points_triple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_points"
                android:onClick="onSpecialButtonClicked"
                android:textOff="TRIPLE"
                android:textOn="TRIPLE"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Points 1-4 -->
        <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <Button
                android:id="@+id/points_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_points"
                android:longClickable="true"
                android:onClick="onPointClicked"
                android:text="1"
                android:textSize="16sp">

            </Button>

            <Button
                android:id="@+id/points_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_points"
                android:onClick="onPointClicked"
                android:text="2"
                android:textSize="16sp">

            </Button>

            <Button
                android:id="@+id/points_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_points"
                android:onClick="onPointClicked"
                android:text="3"
                android:textSize="16sp">

            </Button>

            <Button
                android:id="@+id/points_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_points"
                android:onClick="onPointClicked"
                android:text="4"
                android:textSize="16sp">

            </Button>
        </LinearLayout>

        <!-- Points 5-8 -->
        <LinearLayout
            android:id="@+id/LinearLayout02"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <Button
                android:id="@+id/points_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_points"
                android:onClick="onPointClicked"
                android:text="5"
                android:textSize="16sp">

            </Button>

            <Button
                android:id="@+id/points_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_points"
                android:onClick="onPointClicked"
                android:text="6"
                android:textSize="16sp">

            </Button>

            <Button
                android:id="@+id/points_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_points"
                android:onClick="onPointClicked"
                android:text="7"
                android:textSize="16sp">

            </Button>

            <Button
                android:id="@+id/points_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_points"
                android:onClick="onPointClicked"
                android:text="8"
                android:textSize="16sp">

            </Button>
        </LinearLayout>

        <!-- Points 9-12 -->
        <LinearLayout
            android:id="@+id/LinearLayout03"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <Button
                android:id="@+id/points_9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_points"
                android:onClick="onPointClicked"
                android:text="9"
                android:textSize="16sp">

            </Button>

            <Button
                android:id="@+id/points_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_points"
                android:onClick="onPointClicked"
                android:text="10"
                android:textSize="16sp">

            </Button>

            <Button
                android:id="@+id/points_11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_points"
                android:onClick="onPointClicked"
                android:text="11"
                android:textSize="16sp">

            </Button>

            <Button
                android:id="@+id/points_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_points"
                android:onClick="onPointClicked"
                android:text="12"
                android:textSize="16sp">

            </Button>
        </LinearLayout>

        <!-- Points 13-16 -->
        <LinearLayout
            android:id="@+id/LinearLayout04"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <Button
                android:id="@+id/points_13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_points"
                android:onClick="onPointClicked"
                android:text="13"
                android:textSize="16sp">

            </Button>

            <Button
                android:id="@+id/points_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_points"
                android:onClick="onPointClicked"
                android:text="14"
                android:textSize="16sp"></Button>

            <Button
                android:id="@+id/points_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_points"
                android:onClick="onPointClicked"
                android:text="15"
                android:textSize="16sp">

            </Button>

            <Button
                android:id="@+id/points_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_points"
                android:onClick="onPointClicked"
                android:text="16"
                android:textSize="16sp"></Button>
        </LinearLayout>

        <!-- Points 17-20 -->
        <LinearLayout
            android:id="@+id/LinearLayout05"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <Button
                android:id="@+id/points_17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_points"
                android:onClick="onPointClicked"
                android:text="17"
                android:textSize="16sp"></Button>

            <Button
                android:id="@+id/points_18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_points"
                android:onClick="onPointClicked"
                android:text="18"
                android:textSize="16sp"></Button>

            <Button
                android:id="@+id/points_19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_points"
                android:onClick="onPointClicked"
                android:text="19"
                android:textSize="16sp"></Button>

            <Button
                android:id="@+id/points_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_points"
                android:onClick="onPointClicked"
                android:text="20"
                android:textSize="16sp"></Button>
        </LinearLayout>

        <!-- Bull and Bulls Eye -->
        <LinearLayout
            android:id="@+id/LinearLayout06"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <Button
                android:id="@+id/points_bull"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_points"
                android:onClick="onPointClicked"
                android:text="BULL"
                android:textSize="16sp">

            </Button>

            <Button
                android:id="@+id/points_bulls_eye"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_points"
                android:onClick="onPointClicked"
                android:text="BULLS EYE"
                android:textSize="16sp">

            </Button>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_alignParentBottom="true">

        <!-- Score Section -->
        <LinearLayout
            android:id="@+id/scoreLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/scoreOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/firstAddSign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/scoreTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/secondAddSign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/scoreThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/equalSign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="="
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/totalScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Remaining Points Section -->
        <LinearLayout
            android:id="@+id/scoreInfoLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp">

            <TextView
                android:id="@+id/remainingScoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Remaining points:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/remainingScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="start"
                android:text="1"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Button Check and Undo -->
        <LinearLayout
            android:id="@+id/checkLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/undo_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_cancel"
                android:onClick="onUndoScoreClicked"
                android:text="Undo"
                android:textColor="#ffffff"
                android:textSize="16sp">

            </Button>

            <Button
                android:id="@+id/check_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_accept"
                android:hapticFeedbackEnabled="true"
                android:onClick="onAcceptClicked"
                android:text="Accept"
                android:textColor="#ffffff"
                android:textSize="16sp">

            </Button>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
