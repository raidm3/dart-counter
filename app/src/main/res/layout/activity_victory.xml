<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/victoryHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <!-- Player Stats -->
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:layout_marginBottom="12dp">
        <TableRow>
            <TableLayout
                android:layout_margin="8dp">
                <TableRow>
                    <TextView
                        android:id="@+id/playerName_p1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:text="Player1"/>
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:visibility="invisible"/>
                    <TextView
                        android:id="@+id/playerName_p2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:text="Player2"/>
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:visibility="invisible"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Rounds:"
                        android:padding="3dip"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/darts_thrown_p1"
                        android:text="0"
                        android:padding="3dip"
                        android:textSize="14sp"/>
                    <TextView
                        android:text="Rounds:"
                        android:padding="3dip"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/darts_thrown_p2"
                        android:text="0"
                        android:padding="3dip"
                        android:textSize="14sp"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Average Score:"
                        android:padding="3dip"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/average_score_p1"
                        android:text="0.0"
                        android:padding="3dip"
                        android:textSize="14sp"/>
                    <TextView
                        android:text="Average Score:"
                        android:padding="3dip"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/average_score_p2"
                        android:text="0.0"
                        android:padding="3dip"
                        android:textSize="14sp"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Highscore:"
                        android:padding="3dip"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/highscore_p1"
                        android:text="0"
                        android:padding="3dip"
                        android:textSize="14sp"/>
                    <TextView
                        android:text="Highscore:"
                        android:padding="3dip"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/highscore_p2"
                        android:text="0"
                        android:padding="3dip"
                        android:textSize="14sp"/>
                </TableRow>
            </TableLayout>
        </TableRow>

        <TableRow>
            <TableLayout
                android:layout_margin="8dp">
                <TableRow>
                    <TextView
                        android:id="@+id/playerName_p3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:text="Player3"/>
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:visibility="invisible"/>
                    <TextView
                        android:id="@+id/playerName_p4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:text="Player4"/>
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:visibility="invisible"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Rounds:"
                        android:padding="3dip"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/darts_thrown_p3"
                        android:text="0"
                        android:padding="3dip"
                        android:textSize="14sp"/>
                    <TextView
                        android:text="Rounds:"
                        android:padding="3dip"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/darts_thrown_p4"
                        android:text="0"
                        android:padding="3dip"
                        android:textSize="14sp"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Average Score:"
                        android:padding="3dip"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/average_score_p3"
                        android:text="0.0"
                        android:padding="3dip"
                        android:textSize="14sp"/>
                    <TextView
                        android:text="Average Score:"
                        android:padding="3dip"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/average_score_p4"
                        android:text="0.0"
                        android:padding="3dip"
                        android:textSize="14sp"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Highscore:"
                        android:padding="3dip"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/highscore_p3"
                        android:text="0"
                        android:padding="3dip"
                        android:textSize="14sp"/>
                    <TextView
                        android:text="Highscore:"
                        android:padding="3dip"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/highscore_p4"
                        android:text="0"
                        android:padding="3dip"
                        android:textSize="14sp"/>
                </TableRow>
            </TableLayout>
        </TableRow>

        <TableRow
            android:gravity="center_horizontal" >
            <Button
                android:id="@+id/return_to_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/button_primary"
                android:onClick="returnToHome"
                android:text="Back to Home!"
                android:textColor="#ffffff" />
        </TableRow>
    </TableLayout>
</LinearLayout>